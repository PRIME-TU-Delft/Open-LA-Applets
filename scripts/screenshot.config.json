{
  "server": {
    "port": 4173,
    "startTimeout": 10000
  },
  "screenshots": {
    "outputDir": "static/screenshots",
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "format": "png",
    "fullPage": false,
    "waitForSelector": "canvas, svg",
    "waitTime": 2000,
    "timeout": 10000
  },
  "browser": {
    "headless": true,
    "reducedMotion": true,
    "args": [
      "--disable-web-security",
      "--disable-features=TranslateUI",
      "--disable-ipc-flooding-protection",
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-extensions",
      "--disable-gpu",
      "--no-first-run",
      "--no-zygote",
      "--single-process"
    ]
  },
  "parallel": {
    "enabled": true,
    "maxConcurrent": 4
  }
}
